{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noFallthroughCasesInSwitch": true,

    /* vite.config.ts 타입 인식 */
    "types": ["node", "vite/client"]
  },
  "include": ["vite.config.ts"]
}
